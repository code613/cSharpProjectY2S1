<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl>
            <TabControl.Items>
                <TabItem Header="addNanny">
                    <TabItem.Content>
                        <StackPanel>
                            <Button Content="Add Nanny" Click="Button_Click"/>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem>
                
                <TabItem Header="addMother">
                    <TabItem.Content>
                        <StackPanel>
                            <Button Content="Add mother" Click="Button_Click"/>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem >
                <TabItem Header="addContract">
                    <TabItem.Content>
                        <StackPanel>
                            <Button Content="Add contract" Click="Button_Click"/>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem >
            </TabControl.Items>
        </TabControl>
    </Grid>
            

    
</Window>
