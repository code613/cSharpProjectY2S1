<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" Topmost="False"
        SizeToContent="WidthAndHeight" WindowState="Maximized" Icon="./resources/single pink flower.png">
    <!-- Here's a valid comment. Notice it's outside the <UserControl> tag's braces -->
    <Window.Resources>
        <!--how is this diffrent then a Grid??-->
        <Style TargetType="Button">
            
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl>
            <TabControl.Items>
                <TabItem Header="addNanny">
                    <TabItem.Content>
                        <StackPanel>
                            <Button Content="Add Nanny" Click="ButtonToAddNanny_Click"/>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem>
                <TabItem Header="Add Child">
                    <TabItem.Content>
                        <StackPanel>
                            <Button Content="Add Child" Click="ButtonToAddChild_Click"/>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem >
                <TabItem Header="Add Mother">
                    <TabItem.Content>
                        <StackPanel>
                            <Button Content="Add Mother" />
                        </StackPanel>
                    </TabItem.Content>
                </TabItem >
                <TabItem Header="Add Contract">
                    <TabItem.Content>
                        <StackPanel>
                            <Button Content="Add Contract" Click="ButtonToAddContract_Click"/>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem >
            </TabControl.Items>
        </TabControl>
    </Grid>
            

    
</Window>
